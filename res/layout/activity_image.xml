<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

   
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/abajo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/arriba"
            android:layout_alignParentBottom="true"
            android:onClick="ControlAbajo"
            android:layout_marginBottom="14dp" />

        <Button
            android:id="@+id/arriba"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/der"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/izq"
            android:onClick="ControlArriba" />

        <Button
            android:id="@+id/der"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/izq"
            android:layout_alignBottom="@+id/izq"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/arriba"
            android:onClick="ControlDer" />

        <Button
            android:id="@+id/izq"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/abajo"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="12dp"
            android:onClick="ControlIzq" />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="145dp"
            android:layout_height="155dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/control" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/corazon" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/imageView2"
            android:src="@drawable/corazon" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/imageView3"
            android:src="@drawable/corazon" />

    </RelativeLayout>
     

</RelativeLayout>